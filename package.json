    "cy:run": "cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports/mochawesome,overwrite=false,html=false,json=true",
    "merge-reports": "mochawesome-merge cypress/reports/mochawesome/*.json > cypress/reports/mochawesome/output.json",
    "generate-html": "marge cypress/reports/mochawesome/output.json --reportDir cypress/reports/mochawesome --inline",
    "test:report": "npm run clean-reports && npm run cy:run && npm run merge-reports && npm run generate-html"
